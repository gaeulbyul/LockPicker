{
  "description": "프로텍트 계정의 팔로우를 찾고, 차단이나 블언블하는 확장기능",
  "manifest_version": 2,
  "name": "Lock Picker",
  "author": "Gaeulbyul <aeiou256@gmail.com>",
  "version": "0.1.0",
  "homepage_url": "https://github.com/gaeulbyul/LockPicker",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "https://twitter.com/*",
    "https://api.twitter.com/*",
    "https://mobile.twitter.com/*",
    "storage",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://mobile.twitter.com/*"
      ],
      "css": [
        "styles/style.css"
      ],
      "js": [
        "vendor/browser-polyfill.min.js",
        "vendor/lodash.js",
        "scripts/common.js",
        "scripts/twitter-api.js",
        "scripts/lockpicker-ui.js",
        "scripts/lockpicker.js",
        "scripts/content.js"
      ]
    }
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Lock Picker",
    "default_popup": "popup/popup.html"
  }
}
